<?xml version="1.0"?>
<config>
    <global>
        <helpers>
            <vanillajsconnect>
                <class>Thebod_VanillaJsConnect_Helper</class>
            </vanillajsconnect>
        </helpers>

        <models>
            <vanillajsconnect>
                <class>Thebod_VanillaJsConnect_Model</class>
            </vanillajsconnect>
        </models>

        <blocks>
            <vanillajsconnect>
                <class>Thebod_VanillaJsConnect_Block</class>
            </vanillajsconnect>
        </blocks>
    </global>

    <frontend>
        <routers>
            <vanillajsconnect>
                <use>standard</use>
                <args>
                    <module>Thebod_VanillaJsConnect</module>
                    <frontName>vanillajsconnect</frontName>
                </args>
            </vanillajsconnect>
        </routers>
    </frontend>
</config>
